@model web_team3_assignment.Models.StudentSuggestionViewModel

@{
    ViewData["Title"] = "Acknowledge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Acknowledge">
    <fieldset class="FormContent">
        <legend>Are you sure you want to acknowledge this suggestion??</legend>
        <div class="form-group row">
            <label asp-for="SuggestionId" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="SuggestionId" readonly class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LecturerName" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="LecturerName" readonly class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Description" readonly class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Status" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Status" readonly class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DateCreated" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="DateCreated" readonly class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Acknowledge" class="btn btn-primary mb1 bg-teal" />
            </div>
        </div>
        <div>
            <a asp-action="StudentSuggestion" class="btn btn-primary mb1 black bg-gray">Back to List</a>
        </div>
    </fieldset>
</form>