@model web_team3_assignment.Models.Lecturer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<img src="~/images/createnewlecturerprofilestatic.png" style="display:block; margin:auto;" class="img-fluid" />
<hr />
<form asp-action="Create">
    <fieldset class="FormContent">
        <legend>Input Profile Details Below</legend>
        <div class="form-group row">
            <label asp-for="Name"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description"
                   class="col-sm-3 col-form-label">
            </label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Description" class="form-control" title="Professional Area Description" />
                <span asp-validation-for="Description"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password"
                   class="col-sm-3 col-form-label">
            </label>
            <div class="col-sm-9 col-md-5">
                <input class="form-control" 
                       title="This is the default password that will be set by the system. To change the password, click on Change Password on the menu to change your password" 
                       value="p@55Mentor" disabled/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Create"
                       class="btn btn-primary mb1 black bg-aqua" />
            </div>
        </div>
        <div>
            <a class="btn btn-secondary" role="button" asp-action="Index">Back to List</a>
            @if (ViewData["Message"] != null)
            {
                <span class="text-danger">@ViewData["Message"]</span>
            }
        </div>
    </fieldset>
</form>