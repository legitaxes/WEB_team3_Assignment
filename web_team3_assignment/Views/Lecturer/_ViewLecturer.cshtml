@model IEnumerable<web_team3_assignment.Models.Lecturer>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Photo</th>
                    <th>Email Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.LecturerId.ToString()</td>
                        <td>@item.Name</td>
                        <td>
                            @{ string imageFileName = item.Name + ".jpg"; }
                            <img src="~/images/@imageFileName"
                                 style="width:50px" />
                        </td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-action="Delete" asp-controller="Staff"
                               asp-route-id="@item.LecturerId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
