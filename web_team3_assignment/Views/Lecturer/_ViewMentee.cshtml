@model IEnumerable<web_team3_assignment.Models.Student>

@if (TempData["ErrorMessage"] != null)
{
    <h3 class="text-danger" style="text-align:center;">@TempData["ErrorMessage"]</h3>
}

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Course</th>
                    <th>Photo</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentID.ToString()</td>
                        <td>@item.Name</td>
                        <td>@item.Course</td>
                        <td>
                            @{ string imageFileName = item.Photo; }
                            <img src="~/images/@imageFileName" style="width:50px" />
                        </td>
                        <td>
                            <a asp-action="Index" asp-controller="Student"
                               asp-route-id="@item.StudentID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}