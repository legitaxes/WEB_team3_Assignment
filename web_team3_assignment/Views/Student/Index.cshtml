@model web_team3_assignment.Models.StudentViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img class="img-fluid" src="~/images/yourportfolio.png" style="display:block; margin:auto;" />
@if (ViewData["ErrorMessage"] != null)
{
    <h3 class="text-danger" style="text-align:center;">@ViewData["ErrorMessage"]</h3>
}
@{
    var getlist = ViewBag.list as IEnumerable<web_team3_assignment.Models.StudentSkillSetViewModel>;
}
<hr />
<fieldset class="FormContent">
    <div class="form-group row">
        <label asp-for="StudentID"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("StudentID")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Name"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Name")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Course"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Course")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @{ string imageFileName = Model.Photo; }
            <img src="~/images/@imageFileName" style="width:50px" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Description")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Achievement"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Achievement")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ExternalLink"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("ExternalLink")
        </div>
    </div>
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Skill Set Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skillset in getlist)
                {
                    <tr>
                        <td>@skillset.SkillSetName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group row">
        <label asp-for="EmailAddr"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("EmailAddr")
        </div>
    </div>

    <div class="form-group row" readonly hidden>
        <label asp-for="Password"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Password")
        </div>
    </div>

    <div class="form-group row" readonly hidden>
        <label asp-for="MentorID"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("MentorID")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="LecturerName"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("LecturerName")
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-9 offset-sm-3">
            <button id="backbutton" class="btn btn-primary mb1 black bg-gray">Back</button>
        </div>
    </div>
</fieldset>
<script>
</script>
