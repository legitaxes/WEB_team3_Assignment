@model web_team3_assignment.Models.Student

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="PageTitle">Your portfolio</h4>
<hr />
<fieldset class="FormContent">
    <div class="form-group row">
        <label asp-for="StudentID"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("StudentID")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Name"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Name")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Course"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Course")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Photo")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Description")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Achievement"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Achievement")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ExternalLink"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("ExternalLink")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="EmailAddr"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("EmailAddr")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Password")
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="MentorID"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("MentorID")
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-9 offset-sm-3">
            <a asp-action="StudentMain"
               asp-controller="Home">Back to List</a>
        </div>
    </div>
</fieldset>
