@model web_team3_assignment.Models.ProjectMemberViewModel

@{
    ViewData["Title"] = "View ProjectMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="PageTitle">View ProjectMember</h4>
<!-- Display a list of projectmembers -->
<div class="table-responsive">
    <table id="viewProjectMember" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ProjectID</th>
                <th>StudentID</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.projectMemberList)
            {
                string selectedRow = "";
                if (ViewData["selectedProjectID"].ToString()
                 == item.ProjectId.ToString())
                {
                    // Highlight the selected row
                    selectedRow = "class='table-primary'";
                }
            <tr @Html.Raw(selectedRow)>
                <td>@item.ProjectId.ToString()</td>
                <td>@item.StudentId.ToString()</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Index" asp-controller="ProjectMember"
                       asp-route-id="@item.ProjectId">View Project</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<!-- Display a list of project for each projectmembers -->
@if (ViewData["selectedProjectID"].ToString() != "")
{
    if (Model.projectList.Count != 0)
    {
        <h5>
            ProjectMembers working under the Project
            @ViewData["selectedProjectID"].ToString() :
        </h5>
        <partial name="~/Views/Project/_ViewProject.cshtml"
                 model="@Model.projectList" />
    }
    else
    {
        <h5>No project for selected projectmembers!</h5>
    }
}

