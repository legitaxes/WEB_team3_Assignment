@model IEnumerable<web_team3_assignment.Models.Project>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewProjectMembers" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Project ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Project Photo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProjectId.ToString()</td>
                        <td>@item.Title.ToString()</td>
                        <td>@item.Description.ToString()</td>
                        <td>
                            @{ string imageFileName = item.ProjectPoster + ".jpg"; }
                            <img src="~/images/@imageFileName" style="width:50px" />
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Project"
                               asp-route-id="@item.ProjectId">Edit</a> | 
                            <a asp-action="Details" asp-controller="Project"
                               asp-route-id="@item.ProjectId">Details</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}