
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Unicode character encoding - multi-language compatibility -->
    <meta charset="utf-8">

    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
 initial-scale = 1" />

    <title>NP ICT Portfolio</title>

    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body>
    <div class="container" id="mainContainer">
        <!-- 1st row -->
        <div class="flex-container">
            <!-- Flexbox for logo, auto-expand in the container -->
            <div style="flex:auto;">
                <img id="imgNPLogo" src="~/images/nplogo.gif" />
            </div>
            <div></div>
            <!-- Flexbox for staff login -->
            <div>
                <form method="post" action="~/Home/StaffLogin">
                    <fieldset class="loginFieldset">
                        <legend>Lecturer Login</legend>
                        <label for="txtLoginID">Login ID:</label>
                        <input type="email" name="txtLecturerID"
                               id="txtLecturerID" required /><br />
                        <label for="txtPassword">Password:</label>
                        <input type="password" name="txtLecturerPassword"
                               id="txtLecturerPassword" style="width:100px"
                               required />
                        <input type="submit" id="btnStaffLogin"
                               class="myButton" value="Login" />
                        <br />
                        <span style="color: red;">@TempData["LecturerMessage"]</span>
                    </fieldset>
                </form>
            </div>
            <!-- Flexbox for student login -->
            <div>
                <form method="post" action="~/Home/StudentLogin">
                    <fieldset class="loginFieldset">
                        <legend>Student Login</legend>
                        <label for="txtLoginID">Login ID:</label>
                        <input type="email" name="txtLoginID"
                               id="txtLoginID" required /><br />
                        <label for="txtPassword">Password:</label>
                        <input type="password" name="txtPassword"
                               id="txtPassword" style="width:100px"
                               required />
                        <input type="submit" id="btnStduentLogin"
                               class="myButton" value="Login" />
                        <br />
                        <span style="color: red;">@TempData["Message"]</span>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
