@model web_team3_assignment.Models.SkillSet

@{
    ViewData["Title"] = "SkillSetDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="SkillSetDelete">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="SkillSetId"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="SkillSetId" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SkillSetName"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="SkillSetName" readonly
                       class="form-control-plaintext" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Delete SkillSet"
                       class="btn btn-primary mb1 black bg-aqua" />
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-primary mb1 black bg-gray">Back to SkillSet List</a>
        </div>
    </fieldset>
</form>
