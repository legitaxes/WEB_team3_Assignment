@model web_team3_assignment.Models.SkillSet

@{
    ViewData["Title"] = "SkillSetEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="SkillSetEdit">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="SkillSetId"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="SkillSetId" readonly value="@Model.SkillSetId"
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SkillSetName"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="SkillSetName" value="@Model.SkillSetName"
                       class="form-control-plaintext" />
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Save"
                       asp-action="Edit"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to SkillSet List</a>
        </div>
    </fieldset>
</form>
